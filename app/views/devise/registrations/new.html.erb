<div data-role="content">

	<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>

	  <p><%= f.label :email %>
	  <%= f.email_field :email %></p>

	  <p><%= f.label :password %>
	  <%= f.password_field :password %></p>

	  <p><%= f.label :password_confirmation %>
	  <%= f.password_field :password_confirmation %></p>
	  
	  <p>By clicking "Sign Up" I declare that I agree with the <%= link_to "Terms & Conditions", terms_and_conditions_path %>
		 and <%= link_to "Privacy Policy", privacy_policy_path %></p>

	  <p><%= f.submit "Sign up", 'data-theme' => "b" %></p>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>