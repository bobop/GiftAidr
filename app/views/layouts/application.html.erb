<!DOCTYPE html>
<html>
<head>
  <title>Giftaidr</title>
  <link rel="stylesheet" href="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.css" />
  <link rel="stylesheet" href="/stylesheets/scaffold.css" />
  <%= javascript_include_tag :defaults %>
  <script src="http://code.jquery.com/mobile/1.0a4.1/jquery.mobile-1.0a4.1.min.js"></script>
  <%= csrf_meta_tag %>
</head>
<body>
	<div data-role="page">
		<% unless @welcome %>
			<div data-role="header" class="head_bar" data-theme="b">
				<h1><%= link_to(image_tag("giftaidr_logo_sm.png"), root_url) %></h1>
			</div>
		<% end %>
		<%= yield %>
		<div data-role="footer" class="ui-bar" data-theme="b" data-position="fixed">
			<div data-role="controlgroup", data-type='horizontal', class="footer_buttons">
				<%= link_to 'Logout', logout_path, 'data-role' => 'button', 'data-type' => 'horizontal' if current_user %>
				<%= link_to 'Privacy', privacy_policy_path, 'data-role' => 'button', 'data-type' => 'horizontal' %>
				<%= link_to 'T&C', terms_and_conditions_path, 'data-role' => 'button', 'data-type' => 'horizontal' %>
			</div>
			<div class="footer_copyright">&copy; 2011 <%= link_to "bobop", "http://bobop.co.uk", 'data-role' => 'button' %></div>
		</div><!-- /footer -->
	</div>
	<script type="text/javascript">

	  var _gaq = _gaq || [];
	  _gaq.push(['_setAccount', 'UA-157020-32']);
	  _gaq.push(['_trackPageview']);

	  (function() {
	    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
	    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
	    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
	  })();

	</script>
</body>
</html>
